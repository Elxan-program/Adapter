<Window x:Class="Adapter.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adapter.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label FontSize="25">Name</Label>
            <TextBox FontSize="25" Name="Name_Txt_Box"></TextBox>
            <Label FontSize="25">Surname</Label>
            <TextBox FontSize="25" Name="Surname_Txt_Box"></TextBox>
            <Label FontSize="25">Gmail</Label>
            <TextBox FontSize="25" Name="Gmail_Txt_Box"></TextBox>
            <RadioButton FontSize="25" Name="Xml_Rad_Btn">XML</RadioButton>
            <RadioButton FontSize="25" Name="Json_Rad_Btn">DOC</RadioButton>
            <RadioButton FontSize="25">JSON</RadioButton>
            <Button Margin="0,15,0,0" Command="{Binding SaveCommand}" FontSize="25">SAVE</Button>
        </StackPanel>
    </Grid>
</Window>
